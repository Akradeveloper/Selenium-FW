<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Izertis Automation Suite" verbose="1">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="baseUrl" value="https://www.izertis.com"/>
    
    <listeners>
        <listener class-name="com.automation.listeners.AllureTestListener"/>
    </listeners>

    <test name="All Izertis Tests">
        <classes>
            <class name="com.automation.tests.IzertisHomePageTest"/>
        </classes>
    </test>

    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.tests.IzertisHomePageTest"/>
        </classes>
    </test>

</suite> 